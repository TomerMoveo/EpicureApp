{
    "apps": [
        {
        "name": "Epicure App",
        "script": "nodemon app.js",
        "env": {
          "NODE_ENV": "development"
        }
      }
    ],
    "deploy": {
      "development": {
        "key": "skill-server.pem",
        "user": "ubuntu",
        "host": ["ec2"
        ],
        "ref": "origin/EpicureApp",
        "repo": "git@github.com:TomerMoveo/EpicureApp.git",
        "path": "/home/ubuntu/epicure",
        "ssh_options": "StrictHostKeyChecking=no",
        "post-deploy": "cp ~/.env . && mkdir -p logs && pm2 startOrRestart ecosystem.json --env {{development}}&& pm2 save",
        "env": {
          "NODE_ENV": "development"
        }
      }
    }
}